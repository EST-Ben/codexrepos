{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "types/*": ["./src/_types/*.ts"]
    },
    "types": ["node"],
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["test", "dist", "node_modules"]
}
