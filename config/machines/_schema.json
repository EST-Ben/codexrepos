{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MachineProfile",
  "type": "object",
  "required": ["id", "brand", "model", "type"],
  "properties": {
    "id": {"type": "string"},
    "brand": {"type": "string"},
    "model": {"type": "string"},
    "type": {"enum": ["FDM", "MSLA", "SLA", "CNC_Router", "CNC_Mill", "Generic"]},
    "motion_system": {"enum": ["BedSlinger", "CoreXY", "H-Bot", "Delta", "Cartesian", "IDEX", "Belt", "Other"]},
    "enclosed": {"type": "boolean"},
    "build_volume_mm": {"type": "array", "items": {"type": "number"}, "minItems": 3, "maxItems": 3},
    "workarea_mm": {"type": "array", "items": {"type": "number"}, "minItems": 3, "maxItems": 3},
    "nozzle_diameters": {"type": "array", "items": {"type": "number"}},
    "max_nozzle_temp_c": {"type": "number"},
    "max_bed_temp_c": {"type": "number"},
    "spindle_rpm_range": {"type": "array", "items": {"type": "number"}, "minItems": 2, "maxItems": 2},
    "max_feed_mm_min": {"type": "number"},
    "rigidity_class": {"enum": ["hobby", "hobby_pro", "light_industrial", "industrial"]},
    "supports": {"type": "object", "additionalProperties": {"type": "boolean"}},
    "material_presets": {"type": "object", "additionalProperties": {"type": "object"}},
    "safe_speed_ranges": {"type": "object", "additionalProperties": {"type": "array", "items": {"type": "number"}}},
    "capabilities": {"type": "array", "items": {"type": "string"}},
    "aliases": {"type": "array", "items": {"type": "string"}},
    "notes": {"type": "string"}
  },
  "additionalProperties": true
}
