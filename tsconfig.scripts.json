{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "outDir": "dist-scripts",
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules", "dist-scripts"]
}
