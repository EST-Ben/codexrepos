{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist-scripts",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "strict": false,
    "noEmitOnError": false
  },
  "include": [
    "scripts/**/*.ts",
    "scripts/**/*.mts",
    "scripts/**/*.cts",
    "scripts/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
